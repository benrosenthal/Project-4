<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
          tools:context="com.example.selfreportrefactor.Fragments.SubmitProblemFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imgView"
            android:src="@drawable/ic_photo_size_select_actual_red_400_48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/borough_spinner"
            android:prompt="@string/borough_spinner_prompt"
            android:layout_marginTop="108dp"
            android:layout_below="@+id/imgView"
            android:textAlignment="center"
            style="@android:style/Widget.Spinner"
            android:spinnerMode="dialog"
            android:layout_gravity="left|bottom"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dialog"
            style="@android:style/Widget.Spinner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/problem_submit_button"
            android:text="SUBMIT"/>

    </LinearLayout>
</FrameLayout>
