<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:background="#244a5e">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="12dp"
        card_view:contentPadding="4dp"
        card_view:cardBackgroundColor="#47758d"
        android:foreground="?selectableItemBackground"
        android:clickable="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/problem_image_view"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"/>


            <TextView
                android:id="@+id/prob_desc_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="30sp"
                android:layout_toRightOf="@id/problem_image_view"
                android:layout_alignParentTop="true"/>


            <TextView
                android:id="@+id/development_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="30sp"
                android:layout_below="@+id/prob_desc_text_view"
                android:layout_toRightOf="@id/problem_image_view"/>

            <TextView
                android:id="@+id/time_elapsed_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="30sp"
                android:layout_below="@+id/development_text_view"
                android:layout_toRightOf="@id/problem_image_view"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>